<!--pages/shop_user_center/shop_user_center.wxml-->
<view class="container">
	<view class="userinfo">
		<image wx:if="{{userInfo && userInfo.avatarUrl}}" class="userinfo-avatar" src="{{ userInfo.avatarUrl }}" background-size="cover"></image>
		<text class="userinfo-nickname">{{ userInfo.nickName }}</text>
	</view>
  <view class="asset">
    <view class='item' bindtap='goAsset'>
      <view>{{balance}}</view>
      <view>余额</view>
    </view>
    <view class='item right' bindtap='goScore'>
      <view>{{score}}</view>
      <view>积分</view>
    </view>
  </view>
  <view style="height:10rpx;background: #eee;width:100%;"></view>
  <view class="my-item">
    <navigator url="/pages/order-list/index" hover-class="navigator-hover">我的订单</navigator>
  </view>
  <view class='order-shortcut'>
    <view class='item' bindtap='goOrder' data-type="0">
      <image class="icon" src="../../images/shop_order/topay.png" background-size="cover"></image>
      <view class='text'>待付款</view>
    </view>
    <view class='item' bindtap='goOrder' data-type="1">
      <image class="icon" src="../../images/shop_order/fahuo.png" background-size="cover"></image>
      <view class='text'>待发货</view>
    </view>
    <view class='item' bindtap='goOrder' data-type="2">
      <image class="icon" src="../../images/shop_order/shouhuo.png" background-size="cover"></image>
      <view class='text'>待收货</view>
    </view>
    <view class='item' bindtap='goOrder' data-type="3">
      <image class="icon" src="../../images/shop_order/pj.png" background-size="cover"></image>
      <view class='text'>待评价</view>
    </view>
    <view class='item' bindtap='goOrder' data-type="99">
      <image class="icon" src="../../images/shop_order/shouhou.png" background-size="cover"></image>
      <view class='text'>退款/售后</view>
    </view>
  </view>

  <block wx:if="{{vipLevel > 0}}">
    <view style="height:10rpx;background: #eee;width:100%;"></view>
    <view class="my-item">
      <navigator url="" hover-class="navigator-hover">申请开票</navigator>
    </view>
    <view class="my-item">
      <navigator url="" hover-class="navigator-hover">开票记录</navigator>
    </view>
  </block>

  <view style="height:10rpx;background: #eee;width:100%;"></view>
  <view class="my-item">
    <navigator url="" hover-class="navigator-hover">资金明细</navigator>
  </view>
  <view class="my-item">
    <navigator url="" hover-class="navigator-hover">积分兑换</navigator>
  </view>  
  <view class="my-item">
    <navigator url="" hover-class="navigator-hover">收货地址</navigator>
  </view>
  
  <view wx:if="{{userMobile}}" class="my-item" style="border:none;padding-right:150rpx;width:auto;">
    {{userMobile}}
  </view>
  <view style="height:20rpx;background: #eee;width:100%;"></view>

  <view style="height:20rpx;background: #eee;width:100%;"></view>
  <view wx:if="{{!userMobile}}" class="bind-phone-number">
    <button open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">绑定手机号码</button>
  </view>
  <view class="my-item to-authorize">
    <button type="warn" bindtap="relogin">重新授权登录</button>
  </view>
</view>