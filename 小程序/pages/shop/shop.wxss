/* pages/shop/shop.wxss */
.header{
  flex-direction: row;
  display: flex;
  align-items: center;
  color:#909090;
  padding-top: 10px;
  padding-bottom: 10px;
  padding-left:10px; 
  background-color: rgb(255, 240, 189);
  height: 40px;
}

.pick{
  float: left;
  margin-right: 5px;
}

.search{
  margin-left: 20px;
  float: left;
  height: 15px;
  border-radius: 15px;
  border:1px solid #909090;
}

.searchbtn{
  float: left;
  margin-left: 3px;
}

.bills{
  position: absolute;
  background-color: rgb(255, 240, 215);
  width:100%;
}

.bill{
  border:1px solid #909090;
  width: 100%;
  display: flex;
  align-items: center;
  padding: 5px;
}
.bill image{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-left: 5%;
  margin-right: 5%;
}
.bill .info{
  width: 60%;
}
.bill .name{
  font-size: 18px;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.bill .type{
  font-size: 14px;
  padding-top: 2px;
  padding-bottom: 2px;
}
.bill .date{
  font-size: 14px;
  color: #999999;
}
.bill .cost{
  font-size: 18px;
}