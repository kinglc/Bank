/* pages/editcard/editcard.wxss */

.header{
    height: 10rem;
    background-color: rgb(255, 240, 189);
}

.row-center {
    -webkit-box-align: center;
    -ms-flex-align: center;
    -webkit-align-items: center;
    -moz-align-items: center;
    align-items: center;
}

.row-no-padding {
    padding: 0;
}

.row {
    display: -webkit-box;
    display: -webkit-flex;
    display: -moz-box;
    display: -moz-flex;
    display: -ms-flexbox;
    display: flex;
    padding: 5px;
    width: 100%;
}

view, text {
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

.padding-top, .padding-vertical {
    padding-top: 20px;
    padding-left: 20px;
}

.padding-left, .padding-horizontal {
    padding-left: 10px;
}

.light, a.light {
    color: rgb(82, 74, 4);
}

.col-75 {
    -webkit-box-flex: 0;
    -webkit-flex: 0 0 75%;
    -moz-box-flex: 0;
    -moz-flex: 0 0 75%;
    -ms-flex: 0 0 75%;
    flex: 0 0 75%;
    max-width: 75%;
}

.col-offset-5 {
    margin-left: 5%;
}

/* .list .item:first-child {
    border: none;
} */

.list{
    border-radius: 20px;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    padding-top: 20px;
}

.item {
    border-color: #ddd;
    background-color: #fff;
    color: #444;
    position: relative;
    z-index: 2;
    display: block;
    margin: -1px;
    padding: 16px;
    border-width: 1px;
    border-style: solid;
    font-size: 16px;
}

.item-note {
    float: right;
    color: #aaa;
    font-size: 14px;
}

.direction_right{
  width: 20px;
  height: 20px;
  float: right;
}