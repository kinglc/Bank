<!--pages/editcard/editcard.wxml-->

<view class="tool-tip " wx:if="{{popMsg}}">
    <text class="{{popType}}">{{popMsg}}</text>
</view>
<view>
    <view class="row row-center row-no-padding  header">
        <view class="col-75 col-offset-5 light">
            <view class="padding-left " style="font-size: 0.8rem!important;">零钱金额</view>
            <view class="padding-top " style="font-size: 1.8rem!important;">￥0.0</view>
        </view>
        <view class="col-20 text-center">
            <text class="icon iconfont icon-balance " style="color: #FFD700;font-size: 1.9rem!important;"></text>
        </view>
    </view>
    <view class="list">
        <navigator url="../recharge/recharge" open-type="navigate" class="item item-icon-left item-icon-right">
            <view class="h2">充值
            <image class="direction_right" src="../../images/direction/right.png"></image>
            </view>
        </navigator>
        <navigator url="../withdraw/withdraw" open-type="navigate" class="item item-icon-left item-icon-right">
            <view class="h2">提现
            <image class="direction_right" src="../../images/direction/right.png"></image>
            </view>
        </navigator>
        <view class="padding-top"></view>
        <navigator url="../bankcard_info/bankcard_info" open-type="navigate" class="item item-icon-left item-icon-right">
            <view class="h2">绑定银行卡
            <image class="direction_right" src="../../images/direction/right.png"></image>
            </view>
        </navigator>
        <navigator url="../credits_exchange/credits_exchange" open-type="navigate" class="item item-icon-left item-icon-right">
            <view class="h2">交易记录
            <image class="direction_right" src="../../images/direction/right.png"></image>
            </view>
        </navigator>
    </view>
</view>